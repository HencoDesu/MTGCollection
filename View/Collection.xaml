<UserControl x:Class="HencoDesu.MtgCollection.View.Collection" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HencoDesu.MtgCollection.View"
             xmlns:controls="clr-namespace:HencoDesu.RaphApi.WPF.Controls;assembly=RaphApi.WPF"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" 
             SizeChanged="UserControl_OnSizeChanged">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		
		<Grid Grid.Row="0">
			<StackPanel Orientation="Horizontal">
				<TextBox Width="150"/>
				<controls:RaphButton Content="\{W}"/>
				<controls:RaphButton Content="\{U}"/>
				<controls:RaphButton Content="\{B}"/>
				<controls:RaphButton Content="\{R}"/>
				<controls:RaphButton Content="\{G}"/>
				<controls:RaphButton Content="\{C}"/>
				<controls:RaphButton Content="\{MC}"/>
				<controls:RaphButton Content="..."/>
			</StackPanel>
		</Grid>
		
		<UniformGrid x:Name="CardsGrid" Grid.Row="1"/>
	</Grid>
</UserControl>
