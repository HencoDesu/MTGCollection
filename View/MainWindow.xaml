<controls:RaphWindow x:Class="HencoDesu.MtgCollection.View.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:controls="clr-namespace:HencoDesu.RaphApi.WPF.Controls;assembly=RaphApi.WPF"
                     xmlns:view="clr-namespace:HencoDesu.MtgCollection.View"
                     xmlns:viewModel="clr-namespace:HencoDesu.MtgCollection.ViewModel"
                     mc:Ignorable="d" Icon="pack://application:,,,/Resources/MTG Collection.ico" Title="MTG Collection"
                     SizeChanged="RaphWindow_OnSizeChanged" Height="350" Width="525">
	
	<controls:RaphWindow.DataContext>
		<viewModel:MainWindow/>
	</controls:RaphWindow.DataContext>
	
	<UniformGrid x:Name="CardsGrid" Rows="2" Columns="3">
		<view:Card DataContext="{Binding Cards[0]}" Margin="10"/>
		<view:Card DataContext="{Binding Cards[1]}" Margin="10"/>
		<view:Card DataContext="{Binding Cards[2]}" Margin="10"/>
		<view:Card DataContext="{Binding Cards[3]}" Margin="10"/>
		<view:Card DataContext="{Binding Cards[4]}" Margin="10"/>
		<view:Card DataContext="{Binding Cards[5]}" Margin="10"/>
	</UniformGrid>
</controls:RaphWindow>